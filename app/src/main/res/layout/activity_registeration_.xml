<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/assign3"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context=".Registeration_Activity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Welcom In ORE Registeration Form"
        android:textColor="#540661" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text="Please Fill ALL The Following Information"
        android:textColor="#540661"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/myScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="Full Name : "
                android:textColor="#540661"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/fullName"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#540661" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Email Address : "
                android:textColor="#540661"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/emailAddress"
                android:layout_width="322dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textColor="#540661" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Password  : "
                android:textColor="#540661"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="324dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColor="#540661" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Phone Number  : "
                android:textColor="#540661"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="326dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="#540661" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Gender : "
                android:textColor="#540661"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkMale"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Male" />

            <CheckBox
                android:id="@+id/checkFemale"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Female" />

            <CheckBox
                android:id="@+id/checkNotToSay"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Prefere Not To Say" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="Birth Date :  "
                android:textColor="#540661"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/birthDate"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autofillHints=""
                android:ems="10"
                android:inputType="date"
                android:textColor="#540661" />

            <Button
                android:id="@+id/save"
                android:layout_width="221dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:background="#F4F4F4"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="SAVE"
                app:backgroundTint="#5B0E68" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>