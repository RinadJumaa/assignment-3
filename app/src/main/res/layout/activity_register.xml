<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView2"
        style="@style/txtviewstyle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="499dp"
        android:text="Sign Up Page" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="142dp"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="144dp"
        android:layout_marginRight="144dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edttxt_fullName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="-450dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="111dp"
        android:layout_marginBottom="239dp"
        android:hint="Full Name" />
    <EditText
        android:id="@+id/edttxt_registereEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/edttxt_fullName"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="111dp"
        android:layout_marginBottom="239dp"
        android:hint="Email" />
    <EditText
        android:id="@+id/edttxt_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/edttxt_registereEmail"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="111dp"
        android:layout_marginBottom="239dp"
        android:hint="user name" />

    <EditText
        android:id="@+id/edttxt_registerPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/edttxt_username"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="111dp"
        android:layout_marginBottom="239dp"
        android:hint="Password" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edttxt_registerPassword"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-220dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="317dp"
        android:background="@drawable/custom_btn"
        android:onClick="btn_SignUp"
        android:text="Sign Up"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnLoginPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="Already have an account? Login"
        android:textColor="#333AE5"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>